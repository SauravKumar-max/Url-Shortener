generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UrlShortener {
  id           Int      @id @default(autoincrement())
  original_url String
  short_code   String   @unique
  visit_count  Int      @default(0)
  created_at   DateTime @default(now())
  last_accessed_at DateTime?
  
  @@map("url_shortener")
}